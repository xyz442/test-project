<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--头像-->
            <RelativeLayout
                android:background="@drawable/contact_item"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                ><!--android:background="@color/colorPrimary"-->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:paddingLeft="16dp"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/profile_head"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/contact_name"
                    style="@style/contact_detail_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="小宇"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/profile_image"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    />
                <ImageView
                    android:id="@+id/image_my_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/my_icon_scan"
                    android:layout_toLeftOf="@+id/image_rgiht_arrows"
                    android:paddingRight="12dp"
                    android:layout_centerVertical="true"

                    />
                <ImageView
                    android:id="@+id/image_rgiht_arrows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/my_right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    />

                    
            </RelativeLayout>
            <View
                style="@style/contact_detail_line_padding"
            />

            <RelativeLayout
                android:id="@+id/layout_my_info"
                android:layout_width="match_parent"

                android:background="@drawable/contact_item"
                android:clickable="true"
                android:layout_height="140dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true">
                    <ImageView
                        android:id="@+id/online_office_icon"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_icon_yingyeting"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:layout_toRightOf="@+id/online_office_icon"
                        android:layout_centerVertical="true"
                        android:text="@string/online_office"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_centerInParent="true"
                            android:text="账户余额"
                            android:layout_above="@+id/text2"
                            />
                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textSize="22sp"
                            android:layout_centerInParent="true"
                            android:text="33.22元"
                           />
                        <TextView
                            android:id="@+id/text3"
                            android:layout_below="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textSize="12sp"
                            android:text=" "
                            />
                    </RelativeLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:background="@color/colorGray">
                    </View>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_centerInParent="true"
                            android:text="剩余流量"
                            android:layout_above="@+id/text5"
                            />
                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textSize="22sp"
                            android:layout_centerInParent="true"
                            android:text="33.22MB"
                            />
                        <TextView
                            android:id="@+id/text6"
                            android:layout_below="@+id/text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textSize="12sp"
                            android:text="（套餐外流量：20MB）"
                            />
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>
            <View
                style="@style/contact_detail_line_padding"
                />
            <!--圈子-->
            <RelativeLayout
                android:id="@+id/layout_my_quanzi"
                style="@style/my_item_layout_style">

                <ImageView
                    android:id="@+id/image_quanzi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/my_icon_quanzi"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/contact_num"
                    style="@style/contact_detail_item_title"
                    android:text="圈子"
                    android:layout_toRightOf="@id/image_quanzi"
                    android:paddingLeft="12dp"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/my_right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    />
                <View
                    style="@style/contact_detail_line_padding"
                    android:layout_toRightOf="@id/image_quanzi"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <!--红包-->
            <RelativeLayout
                android:id="@+id/layout_my_hongbao"
                style="@style/my_item_layout_style">

                <ImageView
                    android:id="@+id/image_hongbao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/my_icon_hongbao"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/text_hongbao"
                    style="@style/contact_detail_item_title"
                    android:text="红包"
                    android:layout_toRightOf="@id/image_hongbao"
                    android:paddingLeft="12dp"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/my_right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    />
                <View
                    style="@style/contact_detail_line_padding"
                    android:layout_toRightOf="@id/image_hongbao"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <!--黄页-->
            <RelativeLayout
                android:id="@+id/layout_my_huangye"
                style="@style/my_item_layout_style">

                <ImageView
                    android:id="@+id/image_huangye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/my_icon_huangye"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/text_huangye"
                    style="@style/contact_detail_item_title"
                    android:text="黄页"
                    android:layout_toRightOf="@id/image_huangye"
                    android:paddingLeft="12dp"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/my_right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    />
                <View
                    style="@style/contact_detail_line_padding"
                    android:layout_toRightOf="@id/image_huangye"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <!--收藏-->
            <RelativeLayout
                android:id="@+id/layout_my_shoucang"
                style="@style/my_item_layout_style">

                <ImageView
                    android:id="@+id/image_shoucang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/my_icon_shoucang"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/text_shoucang"
                    style="@style/contact_detail_item_title"
                    android:text="收藏"
                    android:layout_toRightOf="@id/image_shoucang"
                    android:paddingLeft="12dp"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/my_right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    />
                <View
                    style="@style/contact_detail_line_padding"
                    android:layout_toRightOf="@id/image_shoucang"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <!--设置-->
            <RelativeLayout
                android:id="@+id/layout_my_shezhi"
                style="@style/my_item_layout_style">

                <ImageView
                    android:id="@+id/image_shezhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/my_icon_setting"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/text_shezhi"
                    style="@style/contact_detail_item_title"
                    android:text="设置"
                    android:layout_toRightOf="@id/image_shezhi"
                    android:paddingLeft="12dp"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/my_right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    />
                <View
                    style="@style/contact_detail_line_padding"
                    android:layout_toRightOf="@id/image_shezhi"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>

